%hr

%h3
  = "Goals Similar to #{@goal.name}"
.col-md-3
  %h4
    != "#{display_label(@goal.priority, 'Priority')}"
  %ul.list-unstyled
    - @goal.list.goals.priority(@goal.priority).each do |a|
      %li
        = link_to a.name, a
    
.col-md-3
  %h4
    != "#{display_label(@goal.health, 'Health')}"
  %ul.list-unstyled
    - Goal.health(@goal.health, @goal.list).each do |a|
      %li
        = link_to a.name, a
