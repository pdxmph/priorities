%p#notice= notice

%ol.breadcrumb
  %li
    = link_to "Home", root_path
  %li
    = link_to @goal.list.name, @goal.list
  %li.active
    = @goal.name
  - if can? :manage, @goal 
    %li
      = link_to edit_goal_path(@goal) do
        Edit
    
%h2
  = @goal.name

