%h2
  Edit #{resource.email}
.bg-danger.text-danger
  = devise_error_messages! 

%br
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "form-horizontal"}) do |f|

  .form-group
    = f.label "First Name", :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :first_name, :class => 'form-control'

  .form-group
    = f.label "Last Name", :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :last_name, :class => 'form-control'

  .form-group
    = f.label :email, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.email_field :email, autofocus: true , :class => 'form-control'

      
  - if devise_mapping.confirmable? && resource.pending_reconfirmation? 
    %div
      = "Currently waiting confirmation for: #{resource.unconfirmed_email}"

  .form-group
    = f.label 'New password', :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password, autocomplete: "off" , :class => 'form-control'
      .help-block
        %i (leave blank if you don't want to change it)

  .form-group
    = f.label 'Confirm new password', :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'

  .form-group
    = f.label :current_password , :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.password_field :current_password, autocomplete: "off", :class => 'form-control'
      .help-block
        %i (Required to save any changes you've made.)
  .actions.col-sm-offset-2
    .col-sm-4
      = f.submit "Update", :class => 'btn btn-primary'


